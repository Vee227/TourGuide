<Window x:Class="TourGuide.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:vm="clr-namespace:TourGuide.ViewModels"
       Title="Tour Planner" Height="450" Width="800">

    <DockPanel>
        <!-- Menüleiste oben fixieren -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File"/>
            <MenuItem Header="Edit"/>
            <MenuItem Header="Options"/>
            <MenuItem Header="Help"/>
        </Menu>

        <!-- Haupt-Grid -->
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="7*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>

            <!-- Suchleiste -->
            <TextBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                    Width="200" Height="25" VerticalAlignment="Center" 
                    Text="Search" Foreground="Gray"/>

            <!-- Tour-Liste -->
            <StackPanel Grid.Row="1" Grid.Column="0">
                <TextBlock Text="Tours" FontWeight="Bold"/>
                <ListBox>
                    <ListBoxItem Content="Wienerwald"/>
                    <ListBoxItem Content="Dopplerhütte"/>
                    <ListBoxItem Content="Figlwarte"/>
                    <ListBoxItem Content="Dorfrunde"/>
                </ListBox>
            </StackPanel>

            <!-- Routenkarte -->
            <Border Grid.Row="1" Grid.Column="1" Background="LightGray">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="[Map mappie map]"/>
            </Border>

            <!-- Tour Logs -->
            <TabControl Grid.Row="2" Grid.Column="1">
                <TabItem Header="Tour Logs"/>
                <TabItem Header="Details"/>
            </TabControl>
        </Grid>
    </DockPanel>
</Window>