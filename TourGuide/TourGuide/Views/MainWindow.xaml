<Window x:Class="TourGuide.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:vm="clr-namespace:TourGuide.ViewModels"
       Title="Tour Planner" Height="450" Width="800">

    <DockPanel>
        <!-- Haupt-Grid -->
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>

            <!-- Suchleiste -->
            <TextBox Grid.Row="0" Grid.Column="1" Width="200" Height="25" VerticalAlignment="Center" Text="Search" Foreground="Gray"/>

            <!-- Tour-Liste -->
            <StackPanel Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" Margin="10">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Tours" FontWeight="Bold"/>
                    <Button Content="+" Command="{Binding OpenAddTourViewCommand}" Width="30" Height="30" Margin="10,0,0,0"/>
                </StackPanel>
                <ListBox ItemsSource="{Binding TourListViewModel.Tours}" SelectedItem="{Binding SelectedTour, Mode=TwoWay}" DisplayMemberPath="name" Width="150" Height="200"/>
            </StackPanel>

            <!-- Routenkarte -->
            <Border Grid.Row="1" Grid.Column="1" Background="LightGray" Height="200">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="[Map Placeholder]"/>
            </Border>

            <!-- ContentControl to display the CurrentView -->
            <ContentControl Grid.Row="1" Grid.Column="1" Content="{Binding CurrentView}"/>

            <!-- Tour Logs -->
            <TabControl Grid.Row="2" Grid.Column="1">
                <TabItem Header="Tour Logs"/>
                <TabItem Header="Details"/>
            </TabControl>
        </Grid>
    </DockPanel>
</Window>
