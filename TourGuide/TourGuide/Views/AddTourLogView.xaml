<Window x:Class="TourGuide.Views.AddTourLogView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TourGuide.Views"
        mc:Ignorable="d"
        Title="AddTourLogView" Height="480" Width="420">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Add Tour Log" FontSize="20" FontWeight="Bold"
                   HorizontalAlignment="Center" Grid.Row="0" Margin="0,0,0,20"/>

        <!-- Date -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Date (YYYY-MM-DD):" FontWeight="SemiBold"/>
            <TextBox x:Name="DateTextBox" Width="360" Height="30" Padding="5"/>
        </StackPanel>

        <!-- Comment -->
        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Comment:" FontWeight="SemiBold"/>
            <TextBox x:Name="CommentTextBox" Width="360" Height="60" Padding="5" TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Difficulty -->
        <StackPanel Grid.Row="3" Margin="0,0,0,10">
            <TextBlock Text="Difficulty (1-5):" FontWeight="SemiBold"/>
            <ComboBox x:Name="DifficultyComboBox" Width="360" Height="35" Padding="5">
                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="3"/>
                <ComboBoxItem Content="4"/>
                <ComboBoxItem Content="5"/>
            </ComboBox>
        </StackPanel>

        <!-- Total Time -->
        <StackPanel Grid.Row="4" Margin="0,0,0,10">
            <TextBlock Text="Total Time (minutes):" FontWeight="SemiBold"/>
            <TextBox x:Name="TotalTimeTextBox" Width="360" Height="30" Padding="5"/>
        </StackPanel>

        <!-- Rating -->
        <StackPanel Grid.Row="5" Margin="0,0,0,10">
            <TextBlock Text="Rating (1-5):" FontWeight="SemiBold"/>
            <ComboBox x:Name="RatingComboBox" Width="360" Height="35" Padding="5">
                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="3"/>
                <ComboBoxItem Content="4"/>
                <ComboBoxItem Content="5"/>
            </ComboBox>
        </StackPanel>

        <!-- Save Button -->
        <StackPanel Grid.Row="6" HorizontalAlignment="Center" Margin="20,10,20,0">
            <Button Content="💾 Save Log" Click="SaveTourLog_Click"
                    Background="#27AE60" Foreground="White"
                    Width="180" Height="40" FontSize="14"
                    Cursor="Hand" FontWeight="Bold"/>
        </StackPanel>

    </Grid>
</Window>
