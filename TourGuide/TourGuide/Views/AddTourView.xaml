<Window x:Class="TourGuide.Views.AddTourView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Tour" Height="450" Width="400">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Tour Name:" Grid.Row="0"/>
        <TextBox x:Name="TourNameTextBox" Grid.Row="1" Width="250"/>

        <TextBlock Text="Description:" Grid.Row="2"/>
        <TextBox x:Name="DescriptionTextBox" Grid.Row="3" Width="250"/>

        <TextBlock Text="Start Location:" Grid.Row="4"/>
        <TextBox x:Name="StartLocationTextBox" Grid.Row="5" Width="250"/>

        <TextBlock Text="End Location:" Grid.Row="6"/>
        <TextBox x:Name="EndLocationTextBox" Grid.Row="7" Width="250"/>

        <TextBlock Text="Transport Type:" Grid.Row="8"/>
        <ComboBox x:Name="TransportTypeComboBox" Grid.Row="9" Width="250">
            <ComboBoxItem Content="Bike"/>
            <ComboBoxItem Content="Hike"/>
            <ComboBoxItem Content="Run"/>
            <ComboBoxItem Content="Rollerskates"/>
        </ComboBox>

        <TextBlock Text="Distance:" Grid.Row="10"/>
        <TextBox x:Name="DistanceTextBox" Grid.Row="11" Width="250"/>

        <Button Content="Save" Grid.Row="12" Click="SaveTour_Click" HorizontalAlignment="Center"/>
    </Grid>
</Window>
